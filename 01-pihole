#!/bin/bash

# Config files will be stored under Working Directory when bash is started!

# Change here:
LOCALIP="172.20.0.41"
MYPASSWORD="P4ssw0rd"

sudo docker run \
--name=pihole \
--network macvlan \
--ip=$LOCALIP \
--dns=1.1.1.1  \
--dns=127.0.0.1 \
--hostname=pi.hole \
-e SERVERIP=$LOCALIP \
-e WEBPASSWORD=$MYPASSWORD \
-e TZ=America/bahia \
-v $(pwd)/pihole/pihole/:/etc/pihole \
-v $(pwd)/pihole/dnsmasq.d/:/etc/dnsmasq.d \
-p 80:80 \
-p 443:443 \
-p 67:67/tcp \
-p 67:67/udp \
-p 53:53/tcp \
-p 53:53/udp \
--restart=unless-stopped \
pihole/pihole:latest
